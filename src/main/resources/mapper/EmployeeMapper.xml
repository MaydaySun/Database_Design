<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace指定你要实现的mapper接口全名 -->
<mapper namespace="EmployeeMapper">
    <!--标签名是操作方式，id与接口中方法名一致 resultType指定返回值类型的全名-->
    <select id="getEmployeeById" >
        select * from employee where id = #{id};
    </select>
    <select id="update">
        update employee set name = #{new_name} where id = #{id};
    </select>
    <select id="getCourse" resultType="Course">
        select course from course, takes
        where course.course_id = takes.course_id
          and takes.employee_id = #{id};
    </select>
    <select id="getTestRecords" resultType="TestRecord">
        select * from test_record where employee_id = #{id}
    </select>


